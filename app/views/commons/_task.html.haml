= link_to board_task_path(board,task) do
  .task
    -if task.eyecatch.attached?
      .card_image
        = image_tag task.eyecatch
    .task_detail
      %h1.task_title= task.title
    .task_content
      .task_content_texts 
        %p.task_content= task.content
      = image_tag task.user.avatar_image